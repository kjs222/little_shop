      <div class="panel-body">
        <%= form_for [:admin, @charity, @recipient, @need_item], :url => admin_charity_recipient_need_item_path(@recipient.charity.slug, @recipient, @need_item) do |f| %>
      <div class="form-group">
        <%= f.label :need %>
        <%= select(:need_item, :need_id, @needs)  %>
      </div>
      <div class="form-group">
        <%= f.label :quantity %>
        <%= f.select(:quantity, options_for_select(1..20)) %>
      </div>
      <div class="form-group">
        <%= f.label :deadline %>
        <%= f.date_field :deadline  %>
      </div>
      </div>
