<% @charities.each do |charity| %>

  <div class="<%= charity.name %>">

  <h2><%= charity.name %>'s Users</h2>
  <table>
    <tr>
      <th>User</th>
      <th>Role</th>
      <%if current_user.delete_permission? %><th></th><%end%>
    </tr>
    <% charity.users.each do |user| %>
      <tr class="charity-<%=user.username%>">
        <td><%= user.username%></td>
        <td><%= user.role_by_charity(charity).name if user.role_by_charity(charity)%></td>
        <%if current_user.delete_permission? && user.role_by_charity(charity)%><td>  <%= link_to "Delete Role", admin_user_user_role_path(user, user.role_by_charity(charity)), method: :delete %><%end%></td>
      </tr>
    <% end %>

  </table>
</div>
<% end %>

<h2>All Users</h2>
<table>

  <% @users.each do |user| %>
  <tr class="<%=user.username%>">
    <td><%= user.username %></td>
    <td><%= link_to "View", admin_user_path(user) %></td>
    <td><%= link_to "Add Role", new_admin_user_user_role_path(user) %></td>
  </tr>
  <% end %>

</table>
