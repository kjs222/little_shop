<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading edit-need-heading">
          <h2>Edit Need</h2>
        </div>
        <div class="panel-body">
          <%= form_for [:admin, :charity, @need], :url => admin_charity_need_path(@need.charity.slug, @need) do |f| %>

          <%= render partial: 'form', locals: {f: f} %>

          <div class="form-group">
            <%= f.submit "Update Need", class: "add-role" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
