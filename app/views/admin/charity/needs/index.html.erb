<%= link_to "Add Need", new_admin_charity_need_path(@charity.slug) %>
<h1>Needs</h1>

<% if @needs.active %>
  <h4>Active Needs</h4>
  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @needs.active.each do |need| %>
    <tr class="<%=need.name%>">
      <td><%= need.name %> </td>
      <td> <%= link_to "View Details", admin_charity_need_path(@charity.slug, need) %> </td>
      <td> <%= link_to "Update", edit_admin_charity_need_path(@charity.slug, need) %> </td>
      <td><%= deactivate_need_link(need) %><% if current_user.platform_admin? %>
        <%= suspend_need_link(need) %>
      <% end %>
      </td>
    </tr>
  <% end %>

  </table>
<% end %>


