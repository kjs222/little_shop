      <td><%= activate_need_link(need) %><% if current_user.platform_admin? %>
        <%= suspend_need_link(need) %>
      <% end %>
      </td>
    </tr>
  <% end %>

  </table>
<% end %>


<h4>Suspended Needs</h4>
<% if @needs.suspended %>
  <table>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @needs.suspended.each do |need| %>
    <tr class="<%=need.name%>">
      <td><%= need.name %> </td>
      <td> <%= link_to "View Details", admin_charity_need_path(@charity.slug, need) %> </td>
      <td> <%= link_to "Update", edit_admin_charity_need_path(@charity.slug, need) %> </td>
      <td><% if current_user.platform_admin? %>
        <%= activate_need_link(need) %>
      <% end %>
      </td>
    </tr>
