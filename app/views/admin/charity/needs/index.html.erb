<div class="container">
  <%= link_to "Back to Admin Dashboard", admin_dashboard_path, class: "btn btn-primary admin-dashboard" %>

  <%= link_to "Back to Charity Dashboard", admin_charity_dashboard_path(@charity.slug), class: "btn btn-default charity-dashboard" %>

  <div class="text-center">
    <h1>Needs</h1>
  </div>

  <div class="text-center">
    <%= link_to "Add Need", new_admin_charity_need_path(@charity.slug), class: "btn btn-info add-need" %>
  </div

  <div class="col-md-8 col-md-offset-2">

    <h4>Active Needs</h4>
    <%= render partial: 'needs_list_by_status', locals: {need_group: @needs.active, type: :active}%>

    <h4>Inactive Needs</h4>
    <%= render partial: 'needs_list_by_status', locals: {need_group: @needs.inactive, type: :inactive}%>

    <h4>Suspended Needs</h4>
    <%= render partial: 'needs_list_by_status', locals: {need_group: @needs.suspended, type: :suspended}%>

  </div>
  
</div>
