          <div class="carousel-caption">
            <h1>
              Humanitarian
            </h1>
          </div>
        </div>
      </div>
        <div class="item">
          <%= image_tag asset_path('youth.jpg'), class: 'carousel-img' %>
          <div class="container">
            <div class="carousel-caption">
              <h1>
                Youth
              </h1>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag asset_path('education.jpg'), class: 'carousel-img' %>
          <div class="container">
            <div class="carousel-caption">
              <h1>
                Education
              </h1>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag asset_path('economic_development.jpg'), class: 'carousel-img' %>
          <div class="container">
            <div class="carousel-caption">
              <h1>
                Economic Development
              </h1>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag asset_path('immigration.jpg'), class: 'carousel-img' %>
