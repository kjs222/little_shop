          <div class="carousel-caption">
            <h1>
              Animal Rights
            </h1>
          </div>
        </div>
      </div>
    <div class="item">
      <%= image_tag asset_path('civil_rights.jpg'), class: 'carousel-img' %>
      <div class="container">
        <div class="carousel-caption">
          <h1>
            Civil Rights
